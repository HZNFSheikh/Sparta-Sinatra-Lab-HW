<form action="/comments/<% if (@comment[:id] != '') %>/<%= @comment[:id] %><%end%>" method="POST">

<div>
  <label>Name</label>
  <input type="text" name="name" placeholder="Enter your name for your comment" value="<%= @comment[:name] %>">
</div>

<div>
  <label>Comment</label>
  <textarea name="body" rows="8" columns="12" ><%= @comment[:body] %></textarea>
</div>

<% if (@comment[:id] != '') %>
<input type="submit" value="submit">
<% end %>


</form>
